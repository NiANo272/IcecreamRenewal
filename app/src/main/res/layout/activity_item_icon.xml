    <TextView
        android:id="@+id/foodicon"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="10"
        android:text="@string/lemon"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_foodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="lemon"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/foodicon"
        app:layout_constraintStart_toStartOf="@+id/foodicon"
        app:layout_constraintTop_toBottomOf="@+id/foodicon" />

    <TextView
        android:id="@+id/foodquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="5"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_foodname"
        app:layout_constraintStart_toStartOf="@+id/tv_foodname"
        app:layout_constraintTop_toBottomOf="@+id/tv_foodname" />

